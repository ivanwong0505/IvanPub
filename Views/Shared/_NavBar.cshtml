@using IvanCafe.Models
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Ivan's Pub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Drink", "Index", "Product", new { productTypeID = 1 }, null)</li>
                <li>@Html.ActionLink("Snack", "Index", "Product", new { productTypeID = 2 }, null)</li>
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li>
                        @Html.ActionLink("Customer Orders", "Index", "OrderDetail")
                    </li>
                }


                @if (!(Request.IsAuthenticated && User.IsInRole("Admin")))
                {
                    <li>
                        @{ Html.RenderAction("CartSummary", "Cart"); }
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
